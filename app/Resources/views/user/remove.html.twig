        <div class="center-block">
            <h2>{{ 'users.removing'|trans }}</h2>
            <p>{{ 'users.removing.confirmation'|trans }} <b>{{ name }}</b></p>

            {{ form(form) }}
        </div>
    </div>
{% endblock %}