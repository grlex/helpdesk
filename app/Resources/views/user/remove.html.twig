{% extends 'main_template.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .center-block{
            text-align: center
        }
        form .form-group{
            display: inline-block;
        }
    </style>
{% endblock %}

{% block content %}
